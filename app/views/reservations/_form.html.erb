<%= form_with(model: reservation, html: { class: "bg-white p-6 rounded-lg shadow max-w-md mx-auto" }) do |form| %>
  <h1 class="text-xl font-bold mb-4">確認</h1>

  <div class="mb-4">
    <%= form.hidden_field :schedule_id, value: reservation.schedule_id %>
    <label class="block text-gray-700 font-semibold mb-1">スケジュール</label>
    <p class="text-gray-900">
      <%= reservation.schedule.start_time.strftime("%Y年%m月%d日 %H:%M") %>
    </p>
  </div>

  <div class="mb-4">
    <%= form.hidden_field :sheet_id, value: reservation.sheet_id %>
    <label class="block text-gray-700 font-semibold mb-1">座席</label>
    <p class="text-gray-900"><%= reservation.sheet.formatted_name %></p>
  </div>

  <div class="mb-4">
    <%= form.hidden_field :screen_id, value: reservation.screen_id %>
    <label class="block text-gray-700 font-semibold mb-1">スクリーン</label>
    <p class="text-gray-900"><%= reservation.screen.name %></p>
  </div>

  <div class="mb-4">
    <%= form.hidden_field :date, value: reservation.date %>
    <label class="block text-gray-700 font-semibold mb-1">日付</label>
    <p class="text-gray-900"><%= reservation.date.strftime("%Y年%m月%d日") %></p>
  </div>

  <div class="mb-4">
    <label class="block text-gray-700 font-semibold mb-1">映画</label>
    <p class="text-gray-900"><%= reservation.schedule.movie.name %></p>
  </div>

  <div class="mb-4">
    <%= form.hidden_field :user_id, value: current_user.id %>
    <label class="block text-gray-700 font-semibold mb-1">予約者</label>
    <p class="text-gray-900"><%= current_user.email %></p>
  </div>

  <div>
    <%= form.submit "座席を予約する", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition" %>
  </div>
<% end %>
