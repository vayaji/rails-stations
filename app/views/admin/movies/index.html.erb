<div class="overflow-x-auto mt-8">
  <table class="min-w-full border border-gray-200 rounded-lg shadow bg-white">
    <thead class="bg-blue-50">
      <tr>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">ID</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">タイトル</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">公開年</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">概要</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">画像</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">上映中</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">登録日時</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">更新日時</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr class="hover:bg-blue-50 transition">
          <td class="px-4 py-2 border-b"><%= link_to movie.id, edit_admin_movie_path(movie), class: "text-blue-600 hover:underline" %></td>
          <td class="px-4 py-2 border-b"><%= movie.name %></td>
          <td class="px-4 py-2 border-b"><%= movie.year %></td>
          <td class="px-4 py-2 border-b"><%= movie.description %></td>
          <td class="px-4 py-2 border-b"><img src="<%= movie.image_url %>" alt="Movie Image" class="w-20 h-28 object-cover rounded shadow mx-auto" /></td>
          <td class="px-4 py-2 border-b"><span class="inline-block px-2 py-1 rounded-full text-xs font-semibold <%= movie.is_showing ? 'bg-blue-100 text-blue-700' : 'bg-yellow-100 text-yellow-700' %>"><%= movie.is_showing ? 'Yes' : 'No' %></span></td>
          <td class="px-4 py-2 border-b"><%= movie.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td class="px-4 py-2 border-b"><%= movie.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
