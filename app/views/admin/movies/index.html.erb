<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>概要</th>
      <th>画像URL</th>
      <th>上映中</th>
      <th>登録日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.id, admin_movie_path(movie) %></td>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><img src="<%= movie.image_url %>" alt="Movie Image" /></td>
        <td><%= movie.is_showing ? 'Yes' : 'No' %></td>
        <td><%= movie.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= movie.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      </tr>
    <% end %>
  </tbody>
  </thead>
</table>
