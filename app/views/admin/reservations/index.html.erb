<div class="overflow-x-auto mt-8">
  <table class="min-w-full border border-gray-200 rounded-lg shadow bg-white">
    <thead class="bg-blue-50">
      <tr>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">ID</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">映画名</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">座席名</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">予約日</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">開始時間</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">名前</th>
        <th class="px-4 py-2 text-left text-gray-700 font-semibold">メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr class="hover:bg-blue-50 transition">
          <td class="px-4 py-2 border-b"><%= link_to reservation.id, admin_reservation_path(reservation), class: "text-blue-600 hover:underline" %></td>
          <td class="px-4 py-2 border-b"><%= reservation.schedule.movie.name %></td>
          <td class="px-4 py-2 border-b"><%= reservation.sheet.formatted_name %></td>
          <td class="px-4 py-2 border-b"><%= reservation.date.strftime("%Y-%m-%d") %></td>
          <td class="px-4 py-2 border-b"><%= reservation.schedule.start_time.strftime("%H:%M") %></td>
          <td class="px-4 py-2 border-b"><%= reservation.name %></td>
          <td class="px-4 py-2 border-b"><%= reservation.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
